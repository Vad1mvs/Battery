<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vadim.batterymanajer.MainActivity">

    <TextView
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBattery"
        android:layout_alignTop="@+id/pbBattery"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvBattery"
        android:id="@+id/tvRam"
        android:layout_alignLeft="@+id/pbRAM"
        android:layout_alignStart="@+id/pbRAM"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignRight="@+id/pbRAM"
        android:layout_alignEnd="@+id/pbRAM" />

    <ProgressBar

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/pbStorage"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <TextView
        android:text="Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pbStorage"
        android:layout_alignStart="@+id/pbStorage"
        android:layout_alignRight="@+id/pbStorage"
        android:layout_alignEnd="@+id/pbStorage"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pbStorage"
        android:layout_marginBottom="49dp"
        android:id="@+id/tvStorage"
        android:layout_alignLeft="@+id/pbStorage"
        android:layout_alignStart="@+id/pbStorage"
        android:layout_alignRight="@+id/pbStorage"
        android:layout_alignEnd="@+id/pbStorage"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Optimising"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Remaning"
        android:id="@+id/tvOptimising"
        android:layout_alignRight="@+id/Remaning"
        android:layout_alignEnd="@+id/Remaning"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/Remaning"
        android:layout_alignStart="@+id/Remaning" />

    <TextView
        android:text="Remaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Remaning"
        android:layout_below="@+id/pbBattery"
        android:layout_alignRight="@+id/pbBattery"
        android:layout_alignEnd="@+id/pbBattery"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_alignLeft="@+id/pbBattery"
        android:layout_alignStart="@+id/pbBattery" />

    <TextView
        android:text="Used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/pbRAM"
        android:layout_alignLeft="@+id/pbRAM"
        android:layout_alignStart="@+id/pbRAM"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_alignRight="@+id/pbRAM"
        android:layout_alignEnd="@+id/pbRAM" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/pbRAM"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:clickable="false"
        android:contextClickable="false"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsedRam"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <ProgressBar

        android:id="@+id/pbBattery"
        android:layout_width="120dp"
        android:layout_height="120dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        android:layout_alignTop="@+id/pbRAM"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="RAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/tvBattery"
        android:layout_alignLeft="@+id/pbRAM"
        android:layout_alignStart="@+id/pbRAM"
        android:layout_alignRight="@+id/pbRAM"
        android:layout_alignEnd="@+id/pbRAM" />

    <TextView
        android:text="Battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/tvBattery"
        android:layout_alignRight="@+id/pbBattery"
        android:layout_alignEnd="@+id/pbBattery"
        android:layout_alignLeft="@+id/pbBattery"
        android:layout_alignStart="@+id/pbBattery" />

    <TextView
        android:text="Used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pbStorage"
        android:layout_alignLeft="@+id/pbStorage"
        android:layout_alignStart="@+id/pbStorage"
        android:id="@+id/textView11"
        android:layout_alignRight="@+id/pbStorage"
        android:layout_alignEnd="@+id/pbStorage"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:id="@+id/tvUsedStorage"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" />

    <Button
        android:text="CLEAR ALL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textSize="20sp"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
